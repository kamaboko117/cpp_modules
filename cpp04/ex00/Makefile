NAME	=	Animals

SRCS	=	main.cpp															\
			Animal.cpp															\
			Dog.cpp\
			Cat.cpp\
			WrongAnimal.cpp\
			WrongCat.cpp

HPP		=	Animal.hpp\
			Dog.hpp\
			Cat.hpp\
			WrongAnimal.hpp\
			WrongCat.hpp

BONUSOBJS	= ${BONUSSRCS:.c=.o}

CC		= clang++

CFLAGS	= -Wall -Wextra -Werror -std=c++98

RM		= rm -f

${NAME}: ${SRCS} ${HPP}
	${CC} ${CFLAGS} -o ${NAME} ${SRCS}

.c.o:
		${CC} ${CFLAGS} -c $< -o ${<:.c=.o}

all:	${NAME}

bonus:

clean:
	 ${RM} ${OBJS}

fclean:	clean
	${RM} ${NAME}

re:		fclean all

coffee:
